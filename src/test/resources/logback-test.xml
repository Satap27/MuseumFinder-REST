<configuration>

    <property name="LOG_FILE" value="log/rest.log"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
       <encoder>
            <pattern>%d{yy/MM/dd HH:mm:ss} %-5level %logger{36}: %msg%n</pattern>
        </encoder>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
